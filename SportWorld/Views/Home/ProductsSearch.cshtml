<section class="section">
    <h2>Search proudcts:</h2>
    <form asp-action="Search" asp-controller="Catalog" method="get">
        <div class="form-group">
            <label class="control-label">Category</label>
            <select name="category" class="form-control">
                @foreach (var category in ViewBag.Categories as IEnumerable<Category>)
                {
                    <option value="@category">@category.ToString()</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">From Price</label>
            <input type="number" min="0" class="form-control" name="from" />
        </div>
        <div class="form-group">
            <label class="control-label">To Price</label>
            <input type="number" min="0" class="form-control" name="to" />
        </div>
        <div class="form-group">
            <input type="submit" value="Search!" class="btn btn-default" />
        </div>
    </form>
</section>